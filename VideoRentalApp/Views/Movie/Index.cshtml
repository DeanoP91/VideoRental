@model IEnumerable<VideoRentalApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover table-auto">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td class="pad-right">@Html.ActionLink(movie.Name, "Details", "Movie", new { movie.Id }, null)</td>
                <td class="pad-right">@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>
